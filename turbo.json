{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env"],
  "globalEnv": [
    "NODE_ENV",
    "WWW_PORT",
    "MAIL_PORT",
    "WWW_URL",
    "AUTH_SECRET",
    "AUTH_URL",
    "DATABASE_URL",
    "REDIS_URL",
    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET",
    "SES_ACCESS_KEY",
    "SES_SECRET_ACCESS_KEY",
    "SES_REGION",
    "AWS_ACCESS_KEY",
    "AWS_SECRET_KEY",
    "S3_UPLOAD_BUCKET",
    "S3_UPLOAD_REGION",
    "NEXT_PUBLIC_POSTHOG_KEY",
    "NEXT_PUBLIC_POSTHOG_HOST"
  ],
  "ui": "stream",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "start": {
      "dependsOn": ["^start"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
